<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record id="camt054_import_view" model="ir.ui.view">
      <field name="name">Camt.054 Import Wizard</field>
      <field name="model">camt054.import.wizard</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Camt.054 Import">
          <group width="525" colspan="4">
            <field name="camt054file"/>
            <newline/>
            <footer colspan="4">
              <button name="import_camt054" string="Import" type="object" class="oe_highlight" colspan="2"/>
              <button special="cancel" string="Cancel" colspan="2"/>
            </footer>
          </group>
        </form>
      </field>
    </record>

    <record id="wizard_camt054_import" model="ir.actions.act_window">
      <field name="name">Camt.054 Import</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">camt054.import.wizard</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="camt054_import_view"/>
      <field name="target">new</field>
    </record>

    <record model="ir.ui.view" id="view_bank_statement_form">
      <field name="name">account.bank.statement.form.inherit</field>
      <field name="model">account.bank.statement</field>
      <field name="type">form</field>
      <field name="inherit_id" ref="account.view_bank_statement_form"/>
      <field name="arch" type="xml">
        <div name="button_box" position="inside">
          <button
              name="%(wizard_camt054_import)d"
              states="draft,open"
              class="oe_inline oe_stat_button"
              string="Import Camt.054"
              widget="statinfo"
              icon="fa-pencil-square-o"
              type="action"/>
        </div>
      </field>
    </record>
  </data>
</openerp>
